{
  "resources": {
    "head": [
      {
        "type": "script",
        "src": "app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
"options": {
    "properties": {
      "id": {
        "order": 1,
        "title": "Headway Account ID",
        "description": "Grab this from your settings > widget tab on headwayapp.co.",
        "type": "string",
        "placeholder": "4xWvcy"
      },
      "location": {
        "title": "Location",
        "type": "object",
        "format": "element",
        "order": 2
      },
      "translate": {
        "title": "Customize Labels",
        "type": "boolean",
        "default": false,
        "order": 3
      },
      "title": {
              "title": "Changelog Title",
              "default": "[Company Name] Changelog",
              "order": 4,
              "type": "string",
              "showIf": {
                "translate": true
              }
      },
      "labelNew": {
              "title": "Label New",
              "description": "Give an other label value for 'New' then the one provided below.",
              "default": "New",
              "order": 5,
              "type": "string",
              "showIf": {
                "translate": true
              }
      },
       "labelImprovement": {
              "title": "Label Improvement",
              "description": "Give an other label value for 'Improvement' then the one provided below.",
              "default": "Improvement",
              "order": 6,
              "type": "string",
              "showIf": {
                "translate": true
              }
      },
       "labelFix": {
              "title": "Label Fix",
              "description": "Give an other label value for 'Fix' then the one provided below.",
              "default": "Fix",
              "order": 7,
              "type": "string",
                "showIf": {
                    "translate": true
              }
      }
    }
  }
}

